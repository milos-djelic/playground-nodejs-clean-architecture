{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "allowJs": true,                       
    "sourceMap": true,                     
    "outDir": "./dist",                    
    "strict": true,                           
    "noImplicitAny": true,                 
    "baseUrl": ".",                     
    "paths": {"*" : ["node_modules/*"]},
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*"]
}